@using Datos.Models;

@model List<Datos.Models.tarjeta>

@{
    ViewBag.Title = "Tarjeta Ganadora";
    //IEnumerable<string> estados = new List<string>() { "W", "L" };

}

<h2>Configurar Tarjeta Ganadora</h2>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger"><strong>Error!</strong>@ViewBag.Error</div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table class="table">
        <tr>        
            <th>
                Numero de Tarjeta
            </th>
            <th>
                Actualizar Estado
            </th>
        </tr>


    @for (var i = 0; i < Model.Count(); i ++) {
        <tr>        
            <td>
                <div class="form-group">                    
                    <div class="col-md-10">
                        @Html.TextBox("tarjeta[" + @i + "].numeroID", Model[i].numeroID, new { @readonly = "readonly" })                     
                    </div>
                </div>
                
            </td>
            <td>               
                @Html.DropDownList("tarjeta[" + @i + "].estado", new SelectList(new[] { 'W','L'}), "Seleccionar Estado", htmlAttributes: new {@class = "form-control", name= "Estado"})
            </td>                      
        </tr>
    }        

    </table>
    <hr />   
    <input type="submit" value="Actualizar Estado" class="btn btn-success" />

}

